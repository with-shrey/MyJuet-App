<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="windowNoTitle">true</item>
        <item name="contentScrim">@color/Attendence</item>
        <item name="itemIconTint">@color/black</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorAccent">#8BC34A</item>
        <item name="android:textColor">#ffffff</item>
        <item name="contentScrim">@color/black</item>
        <item name="itemIconTint">#fff</item>
        </style>

    <style name="fixedtext">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="variabletext">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">fill_horizontal</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>
    <style name="AppToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>
    <style name="colapsibleDark" parent="Widget.Design.CollapsingToolbar">
        <item name="contentScrim">@color/black</item>
    </style>
    <style name="colapsibleLight" parent="Widget.Design.CollapsingToolbar">
        <item name="contentScrim">@color/Attendence</item>
    </style>
    <style name="collapsed">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="expanded">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- Time table setting styles-->

    <style name="dividerline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!--end-->
    <style name="NavigationTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabTextAppearance">@style/NavigationTabTextAppeareance</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>

    <style name="NavigationTabTextAppeareance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#dedddd</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SplashScreen" parent="android:style/Theme.Light.NoTitleBar">
    <!--<item name="android:windowBackground">@drawable/splash_background</item>-->
</style>
</resources>
