<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.myjuet.com.myjuet">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service
            android:name=".RefreshService"
            android:exported="false" />

        <receiver android:name=".InternetChangeReciever">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="refreshAttendence" />
            </intent-filter>
        </receiver>
        <receiver android:name=".BootReciever">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="SetAlarms" />
            </intent-filter>
        </receiver>
        <receiver android:name=".AlarmReciever" />
        <activity
            android:name=".AttendenceDetailsActivity"
            android:label="Attendence Details"
            android:parentActivityName=".DrawerActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".web.LoginWebkiosk"
            android:label="Login Details"
            android:parentActivityName=".DrawerActivity" />
        <activity
            android:name=".DrawerActivity"
            android:excludeFromRecents="true"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".timetable.TableSettingsActivity"
            android:label="TimeTableSettings"
            android:parentActivityName=".DrawerActivity"
            android:theme="@style/AppTheme" />

        <service android:name=".FirebaseNotificationService">
               
            <intent-filter>
                       
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
                   
            </intent-filter>
        </service>
    </application>

</manifest>